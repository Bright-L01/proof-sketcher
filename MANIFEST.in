include README.md
include LICENSE
include requirements.txt
include requirements-dev.txt
include pyproject.toml

# Include Lean extractor
include src/proof_sketcher/parser/*.lean

# Include templates
recursive-include src/proof_sketcher/templates *.jinja2 *.html *.css *.js

# Include examples
recursive-include examples *.lean *.md

# Include configuration examples
include .proof-sketcher.yaml.example
include .env.example

# Exclude development files
exclude .pre-commit-config.yaml
exclude .gitignore
recursive-exclude tests *
recursive-exclude docs/dev *
global-exclude *.pyc
global-exclude __pycache__