<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ theorem_name }} - Proof Sketcher</title>
    <link rel="stylesheet" href="css/theorem.css">
</head>
<body>
    <nav>
        <a href="{{ index_url }}">← Index</a>
        {% if prev_theorem %}<a href="{{ prev_theorem.url }}">← Previous</a>{% endif %}
        {% if next_theorem %}<a href="{{ next_theorem.url }}">Next →</a>{% endif %}
    </nav>

    <main>
        <h1>{{ theorem_name }}</h1>
        
        <section>
            <h2>Statement</h2>
            <pre><code>{{ theorem_statement }}</code></pre>
        </section>

        <section>
            <h2>Explanation</h2>
            <p>{{ explanation }}</p>
        </section>

        {% if animation_path %}
        <section>
            <h2>Animation</h2>
            <video controls width="100%">
                <source src="{{ animation_path }}" type="video/mp4">
            </video>
        </section>
        {% endif %}

        <section>
            <h2>Proof Steps</h2>
            {% for step in proof_steps %}
            <div class="step">
                <h3>Step {{ loop.index }}: {{ step.description }}</h3>
                {% if step.mathematical_content %}
                <p class="math">{{ step.mathematical_content }}</p>
                {% endif %}
            </div>
            {% endfor %}
        </section>
    </main>
</body>
</html>